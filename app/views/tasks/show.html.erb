<div class="container">
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
<p><%= "Done"%></p>
<% else %>
<p> <%= "Pending" %> </p>
<% end %>
<%= link_to 'Edit', edit_task_path(@task.id) %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to 'Back to home', tasks_path %>
</div>
